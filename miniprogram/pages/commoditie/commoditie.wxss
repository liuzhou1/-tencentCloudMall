.content {
  margin-bottom: 4.4rem;
}

.body {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

.page-section {
  width: 100%;
  margin: 0 auto;
  border-radius: 0px;
  padding-top: 12rpx;
  height: 20rem;
}

.swiper-item {
  display: block;
}

image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

swiper {
  display: block;
  height: 100%;
}

.price {
  color: #f40;
  margin: 0.5rem 0rem 0.5rem 0.5rem;
}

.price text {
  font-size: 1.4rem;
  margin-left: -2px;
}

.title {
  width: 94%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.titles {
  display: inline-block;
  width: 87%;
  margin-right: 1%;
}

.share {
  display: inline-block;
  width: 12%;
  text-align: center;
  font-size: 0.8rem;
  color: #515151;
  padding-bottom: 4px;
}

.share image {
  width: 1.6rem;
  height: 1.6rem;
  position: relative;
  top: 2px;
}

.hint {
  width: 94%;
  margin: 0.4rem auto;
}

.hint view {
  width: 33%;
  display: inline-block;
  font-size: 0.7rem;
  color: #999;
}

.hint-center {
  text-align: center;
}

.hint-right {
  text-align: right;
}

.specification {
  width: 94%;
  margin: 0.8rem auto;
  font-size: 0.8rem;
  color: #999;
}

.roll {
  display: inline-block;
  color: #f40;
  border: 1px solid #f40;
  padding: 2px 6px;
  border-radius: 4px;
  margin-left: 1rem;
  font-size: 0.6rem;
}

.select {
  margin-top: 0.4rem;
}

.select view {
  display: inline-block;
  color: #515151;
  padding: 2px 6px;
  border-radius: 4px;
  margin-left: 0.8rem;
  font-size: 0.8rem;
}

.foot {
  width: 100%;
  height: 3rem;
  position: fixed;
  background-color: #fff;
  bottom: 0;
  z-index: 99;
  box-shadow: 0 0 8px #b2b2b2;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #515151;
}

.foot-left>view {
  width: 33%;
  display: inline-block;
  text-align: center;
  font-size: 0.7rem;
}

.foot-left {
  width: 40%;
  display: inline-block;
}

.foot-left image {
  margin: 0 auto;
  width: 1.3rem;
  height: 1.3rem;
  position: relative;
  top: 3px;
}

.foot-right>view {
  display: inline-block;
  font-size: 1rem;
  height: 3rem;
  line-height: 3rem;
  color: #fff;
  width: 50%;
  text-align: center;
  font-weight: 500;
}

.foot-right {
  width: 60%;
  display: inline-block;
}

.shppingCar {
  background-color: #b2b2b2;
}

.buy {
  background-color: #f40;
}
.scceed-join{
  position: fixed;
  top: 40%;
  width: 50%;
  margin-left: 25%;
  padding-left: 2px;
  text-align: center;
  color: #fff;
  height: 3rem;
  border-radius: 0.2rem;
  line-height: 3rem;
  background-color:rgba(000,000,000,0.5);
}