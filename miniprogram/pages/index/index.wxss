.page-body {
  background-color: #f2f2f2;
}

.page-section {
  width: 96%;
  margin: 0 auto;
  border-radius: 5px;
  padding-top: 12rpx;
}

.swiper-item {
  display: block;
  height: 150px;
  border-radius: 5px;
}

image {
  width: 100%;
  height: 240px;
  display: inline-block;
  overflow: hidden;
}

.classify-box {
  width: 20%;
  display: inline-block;
  text-align: center;
  margin: 5px 0px;
  color: #999;
  font-size: 0.8rem;
}

.img {
  width: 52%;
  height: 2rem;
  margin: 0 25%;
}

.classify {
  width: 96%;
  margin: 0 auto;
  border: 1px solid #dcdcdc;
  background-color: #fff;
  margin-top: 18rpx;
  border-radius: 5px;
}

.news {
  width: 96%;
  margin: 0 auto;
  border: 1px solid #dcdcdc;
  background-color: #fff;
  margin-top: 18rpx;
  border-radius: 5px;
}

.news image {
  width: 1rem;
  height: 1rem;
  margin-left: 1rem;
  margin-right: 5px;
  position: relative;
  top: 2px;
}

.news-title {
  margin: 0.5rem 0;
  color: #999;
  font-size: 0.9rem;
}

.commodity {
  width: 96%;
  margin: 0 auto;
  border: 1px solid #dcdcdc;
  background-color: #fff;
  margin-top: 18rpx;
  border-radius: 5px;
}

.content {
  width: 50%;
  display: inline-block;
  margin: 10rpx 0;
}

.commodity-content {
  font-size: 0.7rem;
  width: 96%;
  margin: 0 auto;
}

.price {
  font-size: 1rem;
  color: #f40;
}

.pricewap {
  font-size: 0.7rem;
  color: #999;
  text-decoration: line-through;
}

.sold {
  font-size: 0.7rem;
  color: #999;
  display: inline-block;
  position: relative;
  float: right;
  top: 14rpx;
  margin-right: 2%;
}

.content>image {
  width: 96%;
  margin-left: 2%;
  height: 9.5rem;
}
.no-img{
  width: 3rem;
  height: 1.7rem;
}
.foot{
  display: flex;
  align-items:center;
  justify-content:center;
  color: #727171;
  font-size: 0.8rem;
  padding:0.3rem 0;
}