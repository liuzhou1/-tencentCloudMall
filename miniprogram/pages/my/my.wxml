<view class='container'>
  <view class='my-message'>
    <view class='left'>
      <image src='{{url}}'></image>
      <text>{{nickName}}</text>     
    </view>
    <view class='right'>个人资料</view>
  </view>
  <view class='item-status'>
    <view class='status'>
      <image src='/images/tab/loading-pay.png' mode="aspectFit"></image>
      <text>待支付</text>
    </view>
    <view class='status'>
      <image src='/images/tab/loading-shipments.png' mode="aspectFit"></image>
      <text>待发货</text>
    </view>
    <view class='status'>
      <image src='/images/tab/loading-receiving.png' mode="aspectFit"></image>
      <text>待收货</text>
    </view>
    <view class='status'>
      <image src='/images/tab/loading-evaluate.png' mode="aspectFit"></image>
      <text>待评价</text>
    </view>
  </view>
  <view class='my-content'>
    <view class='content-box'>
      <image src='/images/tab/order-form.png' mode="aspectFit"></image>
      <text>我的订单</text>
      <image src='/images/tab/right.png' mode="aspectFit" class='expend'></image>
    </view>
    <view class='content-box'>
      <image src='/images/tab/discount-coupon.png' mode="aspectFit"></image>
      <text>我的优惠券</text>
      <image src='/images/tab/right.png' mode="aspectFit" class='expend'></image>
    </view>
    <view class='content-box'>
      <image src='/images/tab/collects.png' mode="aspectFit"></image>
      <text>我的收藏</text>
      <image src='/images/tab/right.png' mode="aspectFit" class='expend'></image>
    </view>
    <view class='content-box'>
      <image src='/images/tab/feedback.png' mode="aspectFit"></image>
      <text>用户反馈</text>
      <image src='/images/tab/right.png' mode="aspectFit" class='expend'></image>
    </view>
    <view class='content-box'>
      <image src='/images/tab/about-we.png' mode="aspectFit"></image>
      <text>加入我们</text>
      <image src='/images/tab/right.png' mode="aspectFit" class='expend'></image>
    </view>
  </view>
  <view class='set'>
    <view class='content-box'>
      <image src='/images/tab/set.png' mode="aspectFit"></image>
      <text>系统设置</text>
      <image src='/images/tab/right.png' mode="aspectFit" class='expend'></image>
    </view>
  </view>

</view>