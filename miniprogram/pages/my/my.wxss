.container {
  background-color: #f2f2f2;
  height: 100%;
  width: 100%;
}

.my-message {
  margin: 0.3rem 0;
  width: 100%;
  height: 4.6rem;
  line-height: 4.6rem;
  background-color: #fff;
}

.left {
  display: inline-block;
  font-size: 0.9rem;
}

.left image {
  width: 4rem;
  height: 4rem;
  vertical-align: middle;
  padding-left: 0.5rem;
}
.left>text {
  color: #000;
  font-size: 0.9rem;
  margin-left: 0.5rem;
}
.right{
  float: right;
  font-size: 0.75rem;
  line-height: 1.2rem;
  padding: 0.2rem 0.3rem;
  background-color: #f80;
  color: #fff;
  margin-right: 1rem;
  border-radius: 0.2rem;
  vertical-align: middle;
  margin-top: 1.5rem;
}
.item-status{
  margin-bottom: 0.3rem;
  width: 100%;
  background-color: #fff;
  text-align: center;
}
.status{
  display: inline-block;
  width: 21.74%;
}
.status>image{
  width:40%;
  height:2.5rem;
  margin-top:0.5rem;
  margin-bottom:-0.15rem;
}
.status>text{
  width: 100%;
  display: inline-block;
  font-size: 0.75rem;
  color: #999;
  margin:0 0 0.5rem 0;
}

.my-content{
  width: 100%;
  background-color: #fff;
  text-align: left;
  margin-bottom: 0.3rem;
}
.content-box{
  height: 3rem;
  line-height: 3rem;
  border-bottom: 1px solid #f2f2f2;
  font-size: 0.9rem;
}
.content-box>image{
  width: 1.5rem;
  height: 1.5rem;
  vertical-align: middle;
  position: relative;
  top: -2px;
  margin:0 0.4rem 0 1rem;
}
.content-box>.expend{
  float:right;
  width:1rem;
  height:1rem;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
.set{
  width: 100%;
  background-color: #fff;
  margin-bottom: 0.3rem;
  text-align: left;
}