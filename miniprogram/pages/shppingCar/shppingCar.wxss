.title {
  text-align: center;
  background-color: #f60;
  color: #fff;
  height: 2.5rem;
  line-height: 2.5rem;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
}

.management {
  position: absolute;
  right: 1.1rem;
}

.content {
  width: 100%;
  padding-top: 1.5rem;
}

.main {
  width: 100%;
  margin: 0 auto;
  background-color: #f2f2f2;
  padding-top: 1rem;
}

.nick {
  display: inline-block;
}

.label-1__text, .label-2__text {
  display: inline-block;
  vertical-align: middle;
}

.label-1__icon {
  position: relative;
  margin: 0 10px;
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  border: 1px solid #dcdcdc;
  border-radius: 100%;
}

.label-1__icon-checked {
  position: absolute;
  top: 4px;
  left: 4px;
  width: 10px;
  height: 10px;
  border-radius: 100%;
  background: #1aad19;
}

.label-2__icon {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
  width: 18px;
  height: 18px;
  background: #fcfff4;
  border-radius: 50px;
}

.label-2__icon-checked {
  position: absolute;
  left: 3px;
  top: 3px;
  width: 12px;
  height: 12px;
  background: #1aad19;
  border-radius: 50%;
}

.contents {
  width: 94%;
  margin: 1rem auto;
  background-color: #fff;
  border-radius: 0.5rem;
}

.contents-select {
  width: 12%;
  text-align: center;
  display: inline-block;
}

.commoditie-box {
  width: 86%;
  vertical-align: middle;
  display: inline-block;
  margin-left: 2%;
}

checkbox {
  position: relative;
  top: 1.55rem;
  padding: 0 0.5rem;
  z-index: 1;
  opacity: 0;
}

.left {
  display: inline-block;
  width: 27%;
}

.left image {
  width: 100%;
  height: 92px;
  padding: 12px 0 7px 0;
}

.right {
  display: inline-block;
  width: 65%;
  margin: 0 4%;
  vertical-align: top;
  padding: 10px 0 7px 0;
  color: #727272;
  font-size: 0.85rem;
}

.right view {
  margin-bottom: 0.25rem;
}

.titles {
  font-size: 0.9rem;
  color: #424242;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
}

.right .piece {
  vertical-align: middle;
  margin: 0.2rem 0;
}

.piece>text {
  display: inline-block;
  color: #f40;
  font-size: 1.2rem;
  width: 40%;
  line-height: 1.65rem;
}

.piece>text>text {
  font-size: 1.5rem;
}

.piece .num {
  display: inline-block;
  width: 58%;
  text-align: right;
  vertical-align: top;
}

.num input {
  display: inline-block;
  width: 2rem;
  text-align: center;
  border: 1px solid #f2f2f2;
  border-left: none;
  border-right: none;
  vertical-align: top;
  color: #a2a2a2;
}

.num text {
  display: inline-block;
  width: 1.4rem;
  height: 1.4rem;
  line-height: 1.4rem;
  text-align: center;
  border: 1px solid #f2f2f2;
  vertical-align: top;
  color: #dcdcdc;
}

.calculate {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 3rem;
  vertical-align: middle;
  background-color: #fff;
  z-index: 9;
}

.all-select {
  display: inline-block;
  height: 100%;
  width: 33%;
}

.all-select switch {
  opacity: 1;
  position: relative;
  top: 0;
  margin-left: 0.6rem;
}

.all-select text {
  display: inline-block;
  transform: translateY(12%);
  color: #727171;
}

.foot {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #727171;
  font-size: 0.8rem;
  margin-top: -0.7rem;
  padding-bottom: 3.3rem;
}

.no-img {
  width: 3rem;
  height: 1.7rem;
}

.money {
  display: inline-block;
  vertical-align: middle;
  width: 65%;
  height: 100%;
  text-align: right;
}

.money text {
  font-size: 1rem;
  color: #727171;
}

.buy {
  display: inline-block;
  width: 5rem;
  height: 2rem;
  line-height: 2rem;
  margin-top: 0.5rem;
  background-image: linear-gradient(to right, #f80, #f60, #f40);
  text-align: center;
  color: #fff;
  font-size: 1.1rem;
  border-radius: 2.5rem;
  margin-left: 0.3rem;
}
